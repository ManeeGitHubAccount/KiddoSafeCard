<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kiddosafecard">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:label="KiddoSafeCard"
        android:supportsRtl="true"
        android:theme="@style/Theme.KiddoSafeCard"
        tools:targetApi="31">

        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Dashboard"
            android:exported="true" />
        <activity
            android:name=".RegisterScreenActivity"
            android:exported="true" />
        <activity
            android:name=".ChildActivity"
            android:exported="true"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ImmunizationActivity"
            android:exported="true" />
        <activity
            android:name=".UpcomingDatesActivity"
            android:exported="true" />
        <activity
            android:name=".EducationActivity"
            android:exported="true" />
        <activity
            android:name=".ImmunizationHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".ProfileDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".LogoutActivity"
            android:exported="true" />

    </application>

</manifest>