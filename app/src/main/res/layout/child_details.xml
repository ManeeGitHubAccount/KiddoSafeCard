<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="295dp"
            android:layout_height="141dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt_select_child_name"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription,UnknownId" />

        <!-- TextView 1 -->
        <TextView
            android:id="@+id/txt_select_child_name"
            android:layout_width="272dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:text="Select your child's name ?"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner_select_child_name"
            android:layout_width="330dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.171"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_select_child_name"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/view"
            android:layout_width="402dp"
            android:layout_height="341dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_select_child_name" />

        <TextView
            android:id="@+id/txt_child_name"
            android:layout_width="126dp"
            android:layout_height="21dp"
            android:layout_marginTop="24dp"
            android:text="Childâ€™s Full Name : "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_gender_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_select_child_name"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_child_name_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_child_name"
            app:layout_constraintTop_toBottomOf="@+id/spinner_select_child_name"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="126dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:text="Gender :"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_child_name"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_gender_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_gender"
            app:layout_constraintTop_toBottomOf="@+id/txt_child_name_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_dob"
            android:layout_width="126dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:text="Date of Birth :"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_gender"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_dob_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_dob"
            app:layout_constraintTop_toBottomOf="@+id/txt_gender_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_DOR"
            android:layout_width="144dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:text="Date of Registration :"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_dob"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_DOR_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_DOR"
            app:layout_constraintTop_toBottomOf="@+id/txt_dob_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_mother_name"
            android:layout_width="126dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:text="Mother Name : "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_DOR"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_mother_name_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_mother_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_DOR_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="126dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:text="Address :"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_mother_name"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_address_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_address"
            app:layout_constraintTop_toBottomOf="@+id/txt_mother_name_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_reg_health_div"
            android:layout_width="171dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:text="Regional Health Division : "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_address"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_reg_health_div_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_reg_health_div"
            app:layout_constraintTop_toBottomOf="@+id/txt_address_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_no_of_children"
            android:layout_width="152dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:text="No of Children including this child : "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_reg_health_div"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/txt_no_of_children_value"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="txt_no_of_children"
            app:layout_constraintTop_toBottomOf="@+id/txt_reg_health_div_value"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="192dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_btn_1"
            android:text="ADD"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="203dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_btn_1"
            android:text="DELETE"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_add"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:ignore="HardcodedText" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:itemIconSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"
            tools:ignore="VisualLintBottomNav" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
